function toggleBooking() {
  const message = document.getElementById('bookingMessage');
  const button = document.getElementById('bookBtn');

  // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ
  message.classList.remove('hidden');

  // –ú–µ–Ω—è–µ–º —Ç–µ–∫—Å—Ç –∫–Ω–æ–ø–∫–∏ –∏ –æ—Ç–∫–ª—é—á–∞–µ–º –µ–µ
  button.textContent = "–ó–∞—è–≤–∫–∞ –ø—Ä–∏–Ω—è—Ç–∞!";
  button.disabled = true;
  button.style.background = "#ccc"; // –î–µ–ª–∞–µ–º –∫–Ω–æ–ø–∫—É —Å–µ—Ä–æ–π
  button.style.cursor = "default";

  // –í —Ä–µ–∞–ª—å–Ω–æ—Å—Ç–∏ —Ç—É—Ç –±—ã–ª –±—ã –∫–æ–¥ –¥–ª—è –æ—Ç–ø—Ä–∞–≤–∫–∏ –¥–∞–Ω–Ω—ã—Ö –≤ WhatsApp –∏–ª–∏ –Ω–∞ –ø–æ—á—Ç—É
  console.log("–ö–ª–∏–µ–Ω—Ç –Ω–∞–∂–∞–ª –∫–Ω–æ–ø–∫—É –∑–∞–ø–∏—Å–∏!");
}

